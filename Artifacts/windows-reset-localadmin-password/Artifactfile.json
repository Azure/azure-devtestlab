{
  "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2016-11-28/dtlArtifacts.json",
  "title": "Reset local VM Administrator password",
  "description": "Artifact to enable local administrator account, reset password and set password to never expire",
  "publisher": "Milan Musec",
  "tags": [
      "Windows"
  ],
  "targetOsType": "Windows",
  "parameters": {
    "newPassword": {
      "type": "securestring",
      "displayName": "New Local Administrator Password:",
      "description": "New Password",
      "defaultValue": ""
    }
  },
  "runCommand": {
    "commandToExecute": "[concat('powershell.exe -ExecutionPolicy bypass \"& ./artifact-main.ps1', ' -NewPassword ''', parameters('newPassword'), '''\"')]"
  }
}