{
  "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2016-11-28/dtlArtifacts.json",
  "title": "Install PowerShell module",
  "publisher": "Ross Bohr",
  "description": "Installs the specified PowerShell module from the PowerShell gallery.",
  "tags": [
    "PowerShell",
    "Module",
    "Install",
    "Gallery",
    "Windows"
  ],
  "iconUri": "https://www.powershellgallery.com/Content/Images/packageDefaultIcon.png",
  "targetOsType": "Windows",
  "parameters": {
    "moduleName": {
      "type": "string",
      "displayName": "PowerShell Module Name",
      "description": "The name of the PowerShell Module (e.g. \"AzureRM\")"
    }
  },
  "runCommand": {
    "commandToExecute": "[concat('powershell.exe -ExecutionPolicy bypass \"& ./install-powershell-module.ps1', ' -moduleName ', parameters('moduleName'), '\"')]"
  }
}
